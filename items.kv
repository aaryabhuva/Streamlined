#:kivy 2.1.0

<ItemScreen>:
    name: "items"

    FloatLayout:
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            size_hint: 0.8, 0.1
            text: "Welcome"
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint: 0.8, 0.5
            halign: "center"
            valign: "center"
            text: "Click on the item you want to pick for further actions"
        Button:
            pos_hint: {"center_x": 0.25, "center_y": 0.25}
            size_hint: 0.2, 0.1
            text: "Apple\n1"
            on_release: root.onpress_item1()
        Button:
            pos_hint: {"center_x": 0.75, "center_y": 0.25}
            size_hint: 0.2, 0.1
            text: "Banana\n2"
            on_release: root.onpress_item2()

<Item1Screen>:
    name: "item1"

    FloatLayout:
        Label:
            pos_hint: {"center_x": 0.4, "center_y": 0.5}
            size_hint: 0.7, 0.8
            multiline: True
            halign: "center"
            valign: "center"
            text: root.get_item_data()



<TextInputPopup>:
    title: "Popup"
    size_hint: None, None
    size: 400, 400
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: txtinput
            text: root.obj_text
        Button:
            size_hint: 0.5, 0.2
            text: "Save Changes"
            on_release:
                root.obj.update_changes(txtinput.text)
                root.dismiss()
        Button:
            size_hint: 1, 0.2
            text: "Cancel Changes"
            on_release: root.dismiss()


<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<Button>:


<RV>:

    BoxLayout:
        orientation: "vertical"

        GridLayout:
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 2

            Label:
                text: "User ID"
            Label:
                text: "User Name"

        BoxLayout:
            RecycleView:
                viewclass: 'Button'
                data: [{'text': str(x)} for x in root.data_items]
                RecycleBoxLayout:
                    cols: 2
                    default_size: None, "26dp"
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
